{
  "name": "grantly",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "src/grantly-front"
    ]
  },
  "devDependencies": {
    "concurrently": "9.1.2",
    "husky": "9.1.7",
    "lint-staged": "15.4.3"
  },
  "scripts": {
    "install": "yarn install",
    "postinstall": "yarn husky init && echo 'yarn lint' > .husky/pre-commit",
    "dev": "concurrently -c \"bgGreen.bold,bgMagenta.bold,bgYellow.bold,bgBlue.bold\" \"yarn:run-*\"",
    "run-traefik": "cd docs/infra/local/traefik && traefik --configFile=traefik.toml > /dev/null",
    "run-front": "yarn workspace @grantly/front dev",
    "run-api": "make run-api",
    "lint": "lint-staged",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/api/**/*.kt": [
      "ktlint --format"
    ]
  },
  "packageManager": "yarn@4.5.1"
}
